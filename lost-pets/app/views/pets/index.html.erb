
<div class="container">
  <h1>Pets</h1>
  <% @pets.each do |pet| %>
    <%= link_to pet_path(pet) do %>
      <div class="card">
        <h2><%= pet.name %></h2>
        <p><%= pet.found_on %></p>
        <p><%= pet.species %></p>
      </div>
    <% end %>
  <% end %>


  <%= link_to '+ Add a new pet', new_pet_path %>
</div>
